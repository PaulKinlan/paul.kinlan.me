{
  "public": true,
  "framework": "hugo",
  "trailingSlash": true,
  "redirects": [
    {
      "source": "/amp/(.+)/",
      "destination": "/$1/"
    }
  ],
  "rewrites": [
    {
      "source": "/.well-known/(.*)",
      "destination": "/api/well-known/$1"
    },
    {
      "source": "/authorize_interaction",
      "destination": "/api/activitypub/authorize_interaction.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*).ajson",
      "headers": [
        {
          "key": "content-type",
          "value": "application/activity+json"
        }
      ]
    }
  ]
}
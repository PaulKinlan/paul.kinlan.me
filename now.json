{
  "version": 2,
  "name": "paul.kinlan.me",
  "alias": ["paul.kinlan.me"],
  "build": {
    "env": {
      "WEBMENTION": "@webmention-token",
      "HUGO_VERSION": "0.71.0"
    }
  },
  "trailingSlash": true,
  "redirects": [
    {
      "source": "/amp/(.+)/",
      "destination": "/$1/"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*?)/$",
      "destination": "/$1/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "content-type",
          "value": "text/html"
        }
      ],
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=7200"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": ".well-known/webfinger",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/jrd+json; charset=utf-8"
        }
      ]
    },
    {
      "source": "/images/twitter-(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=86400"
        }
      ]
    },
    {
      "source": "\\.mjs$",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=86400"
        }
      ]
    },
    {
      "source": "\\.(jpg|jpeg|gif|png)$",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=86400"
        }
      ]
    },
    {
      "source": "\\.(js|json)$",
      "headers": [
        {
          "key": "cache-control",
          "value": "s-maxage=7200"
        }
      ]
    },
    {
      "source": "\\.ajson$",
      "headers": [
        {
          "key": "content-type",
          "value": "application/activity+json"
        }
      ]
    }
  ]
}

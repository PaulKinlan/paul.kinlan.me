{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{.Site.Title}}",
    "feed_url": "{{.Site.RSSLink}}",
    "home_page_url": "{{.Site.BaseURL}}",
    "author": {
        "name": "Paul Kinlan",
        "url": "https://paul.kinlan.me/"
    },
    "items": [
    {{ $paginator := .Paginate (where .Site.Pages "Type" "page") }}
    {{ range $index, $element := $paginator.Pages }}
    {{- if $index }}, {{ end }}
    {{ dict "title" .Title "url" .URL "summary" .Description "content_html" .Content "date_published" (.Date.Format "Mon, 02 Jan 2006 15:04:05 -0700") "date_modified" (.Lastmod.Format "Mon, 02 Jan 2006 15:04:05 -0700") | jsonify }} 
    {{ end }}
    ]
}